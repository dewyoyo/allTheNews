{{> navs/saved}}

<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
        <div class="caption">
            <h1>{{this.title}}</h1>
            <p>{{this.subtitle}}</p>
        </div>
    </div>

</div>

<div id="articles">
    {{#if articles}}
    {{#each articles}}
    <div class="well">
        <div class="row">
            <div class="col col-md-10">
                <h4><a href="{{this.link}}">{{this.title}}</a></h4>
                <h6>{{this.summary}}</h6>
            </div>
            <div class="col col-md-2">
                <form class="form-inline" action="/api/restore/{{this.id}}?_method=RESTORE" method="POST">
                    <button type="submit" class="btn btn-success">Restore Article</button>
                </form>
            </div>
        </div>
    </div>

    {{> content/modal}}

    {{/each}}
    {{else}}
    <div class="well">
        <h4>There are no deleted articles.</h4>
    </div>
    {{/if}}
</div>