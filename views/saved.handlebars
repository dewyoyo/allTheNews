{{> navs/saved}}

<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
        <div class="caption">
            <h1>{{this.title}}</h1>
            <p>{{this.subtitle}}</p>
        </div>
    </div>

</div>

<div id="articles">
    {{#if articles}}
    {{#each articles}}
    <div class="well">
        <div class="row">
            <div class="col col-md-8">
                <h4><a href="{{this.link}}">{{this.title}}</a></h4>
            </div>
            <div class="col col-md-2">
                <a class="btn btn-success" href="#" data-toggle="modal" data-target="#{{this.id}}">Notes</a>
            </div>
            <div class="col col-md-2">
                <form class="form-inline" action="/api/articles/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete Article</button>
                </form>
            </div>
        </div>
    </div>

    {{> content/modal}}

    {{/each}}
    {{else}}
    <div class="well">
        <h4>There are no saved articles.</h4>
    </div>
    {{/if}}
</div>